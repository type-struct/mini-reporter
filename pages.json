{
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/info/info",
      "style": {
        "navigationBarTitleText": "信息录入",
        "app-plus": {
          "bounce": "vertical",
          "titleNView": {
            "buttons": [
              {
                "text": "送样",
                "fontSrc": "/static/uni.ttf",
                "fontSize": "22px",
                "color": "#FFFFFF"
              }
            ]
          }
        }
      }
    },
    {
      "path": "pages/record/record",
      "style": {
        "navigationBarTitleText": "检测记录",
        "app-plus": {
          "titleNView": {
            "buttons": [
              {
                "text": "记录",
                "fontSrc": "/static/uni.ttf",
                "fontSize": "22px",
                "color": "#FFFFFF"
              }
            ]
          }
        }
      }
    },
    {
      "path": "pages/user/user",
      "style": {
        "navigationBarTitleText": "个人中心",
        "app-plus": {
          "titleNView": {
            "buttons": [
              {
                "text": "我的",
                "fontSrc": "/static/uni.ttf",
                "fontSize": "22px",
                "color": "#FFFFFF"
              }
            ]
          }
        }
      }
    },
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "设置",
        "app-plus": {
          "titleNView": {
            "buttons": [
              {
                "text": "设置",
                "fontSrc": "/static/uni.ttf",
                "fontSize": "22px",
                "color": "#FFFFFF"
              }
            ]
          }
        }
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  },
  "tabBar": {
    "color": "#8a8a8a",
    "selectedColor": "#007AFF",
    "borderStyle": "black",
    "backgroundColor": "#F8F8F8",
    "list": [
      {
        "pagePath": "pages/info/info",
        "iconPath": "static/send.png",
        "selectedIconPath": "static/sendHL.png",
        "text": "送样"
      },
      {
        "pagePath": "pages/record/record",
        "iconPath": "static/report.png",
        "selectedIconPath": "static/reportHL.png",
        "text": "记录"
      },
      {
        "pagePath": "pages/user/user",
        "iconPath": "static/user.png",
        "selectedIconPath": "static/userHL.png",
        "text": "我的"
      }
    ]
  },
  "condition": {
    //模式配置，仅开发期间生效
    "current": 0, //当前激活的模式(list 的索引项)
    "list": [
      {
        "name": "a", //模式名称
        "path": "pages/user/user", //启动页面，必选
        "query": "" //启动参数，在页面的onLoad函数里面得到
      }
    ]
  }
}
